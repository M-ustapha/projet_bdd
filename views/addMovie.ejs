<form action="/movies" method="POST" enctype="multipart/form-data">
    <label for="title">Titre :</label>
    <input type="text" name="title" required><br>

    <label for="releaseYear">Année de sortie :</label>
    <input type="number" name="releaseYear"><br>

    <label for="duration">Durée (minutes) :</label>
    <input type="number" name="duration"><br>

    <label for="genre">Genre :</label>
    <input type="text" name="genre"><br>

    <label for="director">Réalisateur :</label>
    <input type="text" name="director"><br>

    <label for="actors">Acteurs principaux :</label>
    <input type="text" name="actors"><br>

    <label for="synopsis">Synopsis :</label>
    <textarea name="synopsis"></textarea><br>

    <label for="classification">Classification :</label>
    <input type="text" name="classification"><br>

    <label for="language">Langue :</label>
    <input type="text" name="language"><br>

    <label for="trailer">Bande-annonce (lien) :</label>
    <input type="url" name="trailer"><br>

    <label for="poster">Affiche du film :</label>
    <input type="file" name="poster"><br>

    <label for="format">Format :</label>
    <input type="text" name="format"><br>

    <label for="productionStudio">Studio :</label>
    <input type="text" name="productionStudio"><br>

    <label for="releaseDate">Date de sortie :</label>
    <input type="date" name="releaseDate"><br>

    <button type="submit">Ajouter</button>
</form>
